<Page x:Class="ShopApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopApp"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="120"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <TextBlock Text="Login" FontSize="24" 
                       Margin="10"/>
            <TextBox Name="EmailTextBox" 
                     Margin="10"/>
            <PasswordBox Name="PasswordBox"
                         Margin="10"/>
            <Button Content="Login" Click="LoginButton_Click" 
                    Margin="10"/>
            <Button Content="Forgot Pass" 
                    Click="ForgotPassButton_Click" 
                    Margin="10"/>
        </StackPanel>
    </Grid>

</Page>
